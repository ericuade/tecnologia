<link rel="stylesheet" href="/stylesheets/contacto.css">

<!-- Contacto -->
<section id="contacto">

    <div class="container">
        <div class="pt-5">
            <!-- Visible para MD o superior -->
            <h2 class="display-4 mb-1 pt-5 d-none d-md-block">Contacto</h2>

            <!-- Visible para inferior a MD -->
            <h2 class="h1 mb-1 d-md-none d-lg-none">Contacto</h2>
            <hr class="pb-3">

            <!-- FOMULARIO -->
            <form action="/contactanos" method="POST" class="mt-5 mb-5">

                <div class="row">
                    <!-- INPUTS -->
                    <div class=" col-md-5">
                        <!-- NOMBRE  -->
                        <div class="form-group ">
                            <label for="name-contact">Nombre</label>
                            <input name="nombre" placeholder="Ej Juan Perez" type="text" class="form-control"
                                id="name-contact" aria-describedby="emailHelp">
                        </div>

                        <!-- EMAIL  -->
                        <div class="form-group ">
                            <label for="email-contact">Email</label>
                            <input name="email" placeholder="Ej juanperez@gmail.com" type="email" class="form-control"
                                id="email-contact">
                        </div>

                        <!-- ASUNTO -->
                        <div class="form-group">
                            <label for="subject-contact">Asunto</label>
                            <input name="asunto" placeholder="Ej Contacto" type="text" class="form-control"
                                id="subject-contact">
                        </div>
                    </div>



                    <!-- MENSAJE -->
                    <div class="form-group col-md-7 ">
                        <label class="mb-2" for="message">Mensaje</label>
                        <textarea name="mensaje" placeholder="Aqui escribe el mensaje"
                            class="bf_contact-textarea form-control" id="message" rows="7"></textarea>
                    </div>

                </div>



                <div class="row ">

                    <div class="col-12 col-sm-8 mb-3 mb-md-0">
                        Completa el formulario o escribenos a equipo@fundacionramseyer.org.ar
                    </div>
                    <div class="col-12 col-sm-4 mb-3 d-flex flex-row-reverse bd-highlight">

                        <button type="submit" class="btn btn- bf_submit_button">Enviar</button>

                    </div>

                </div>


            </form>




            <!-- IFRAME MAPA -->
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d215994.81300994367!2d-65.14126240747738!3d-32.23334866043842!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95d2df02a2bf55a9%3A0xffef8a34e50754da!2sFundaci%C3%B3n%20Beatriz%20Ramseyer!5e0!3m2!1ses-419!2sar!4v1595967463986!5m2!1ses-419!2sar"
                width="100%" height="400" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false"
                tabindex="0" class=" mb-5 pb-md-5"></iframe>
            <!-- <div class="embed-responsive embed-responsive-16by9">
        </div> -->
        </div>

    </div>

</section>